@model GraphViewModel
@using Task = taskograph.Models.Tables.Task;
@using taskograph.Web.Models.DTOs


<h1>Graph</h1>

<h2>Last week Text Graph</h2>

<p>
    Showing graph for number: @Model.Number length: @Model.Length
</p>


<form asp-controller="Graph" asp-action="ShowGraph" method="post">
    <div>
        <label asp-for="@Model.Number">Number</label>
        <input asp-for="@Model.Number" />
    </div>
    <div>
        <label asp-for="@Model.Length">Length</label>
        <input asp-for="@Model.Length" />
    </div>
    <input type="submit" class="btn btn-primary" value="Show Graph" />
</form>

<table class="table">
    <thead>
        <tr>
            @{
                foreach (TextGraphOneCellDTO cell in Model.TextGraphCell)
                {
                    <th scope="col">@cell.Description</th>
                }
            }
        </tr>
       
    </thead>


    <tbody>
        @{
            for (int i = 0; i < Model.TextGraphCell.ElementAt(0).Tasks.Count(); i++)
            {
                <tr>
                @for (int j = 0; j < Model.TextGraphCell.Count(); j++)
                {
                        
                        if (Model.TextGraphCell.ElementAt(j).Tasks.ElementAt(i).TotalDurationToday.ToString() != "")
                        {
                            <td>@Model.TextGraphCell.ElementAt(j).Tasks.ElementAt(i).Name @Model.TextGraphCell.ElementAt(j).Tasks.ElementAt(i).TotalDurationToday.ToString()</td>
                        }
                        else
                        {
                        <td></td>    
                        }
                }
                </tr>
            }
        }
        <tr>
            @{
                foreach (TextGraphOneCellDTO cell in Model.TextGraphCell)
                {
                    <td>TotalTasksTime @cell.TotalDuration.ToString()</td>
                }
            }
        </tr>
    </tbody>
</table>